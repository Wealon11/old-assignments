@using SurveyServiceApp.Controllers
@using SurveyServiceApp.Managers
@{
    ViewData["Title"] = "Home Page";
    CarManager carManager = new CarManager();
}

@model HomeController

<link href="css/SlickSlider.css" rel="stylesheet" />
<link href="css/FeedbackForm.css" rel="stylesheet" />
<div class="background-container">
    <div id="reviewForm">
        <form>
            <h1 class="text-white">Welcome</h1>
            <h4 class="text-white-50">Look for your dream car</h4>
            <div class="form-group">
                <label class="text-white" for="exampleFormControlSelect1">Car Brand</label>
                <select class="form-control" id="exampleFormControlSelect1">
                    <option>Audi</option>
                    <option>Ford</option>
                    <option>Land Rover</option>
                    <option>Chrysler</option>
                    <option>SEAT</option>
                </select>
            </div>
            <div class="form-group">
                <label class="text-white" for="exampleFormControlSelect2">Number of Seats</label>
                <select class="form-control" id="exampleFormControlSelect2">
                    <option>2</option>
                    <option>5</option>
                    <option>7</option>
                </select>
            </div>
            <div class="form-group">
                <label class="text-white" for="exampleFormControlSelect3">Type</label>
                <select class="form-control" id="exampleFormControlSelect3">
                    <option>Electric</option>
                    <option>Gas</option>
                    <option>Diesel</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Check</button>
        </form>
    </div>
</div>

<div class="feedback feedback-toggle rotate">Give feedback</div>
<script>
    $('.feedback-toggle').click(function () {
        var left = parseFloat($('.feedback')[0].style.left.match(/[0-9]+/g)) || 50,
            tgl = '+=280';
        (left > 50) ? tgl = '-=280' : tgl = '+=280';
        $('.feedback').animate({ left: tgl }, 500);
    });

</script>
<div class="feedback feedback-form-wrapper">
    <form id="feedback-form" class="form-horizontal" method="POST">
        <legend>Review your experience with our car</legend>
        <div class="form-group">
            <label class="text-white" for="selectGenderFormSelect">Gender</label>
            <select asp-for="Gender" class="form-control" id="selectGenderFormSelect">
                <option>Male</option>
                <option>Female</option>
                <option>Other</option>

            </select>
        </div>
        <div class="form-group">
            <label class="text-white" for="selectAgeRangeFormSelect">Age</label>
            <select asp-for="Age" class="form-control" id="selectAgeRangeFormSelect">
                <option>20-29</option>
                <option>30-39</option>
                <option>40-49</option>
                <option>50-59</option>
                <option>60-69</option>
                <option>70-79</option>

            </select>
        </div>
        <div class="form-group">
            <label for="postalCodeInput">Postal Code</label>
            <input asp-for="PostalCode" class="form-control" autocomplete="off" placeholder="Ex: 2800" required="required" type="text" id="postalCodeInput">
        </div>
        <div class="form-group">
            <label for="licensePlateInput">Car Rented</label>
            <select name="Car" class="form-control" required="required" id="licensePlateInput">
                @{
                    foreach (var car in carManager.GetCars().Result)
                    {
                        <option>@car.Brand @car.LicensePlate</option>
                    }
                }
            </select>
        </div>
        <div class="form-group">
            <label class="text-white" for="selectRatingFormSelect">Rating</label>
            <select asp-for="Rating" class="form-control" id="selectRatingFormSelect" required="required">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>
        <div class="form-group">
            <label for="descriptionFormControl">Describe your experience</label>
            <textarea asp-for="Description" class="form-control" id="descriptionFormControl" rows="3"></textarea>
        </div>
        <button asp-action="OnPostReview" type="submit" class="btn btn-default">Send Details</button>
    </form>
</div>
<div id="carouselExampleControls" class="carousel slide featuredCars" data-ride="carousel">
    <h2>DON'T DREAM IT, DRIVE IT!</h2>
    <div class="carousel-inner text-center">
        <div class="carousel-item active">
            <img src="images/carTypes/shelby.png" />
            <p>
                <a href="#" class="btn btn-outline-dark btn-lg">BOOK COUPES NOW</a>
            </p>
        </div>
        <div class="carousel-item">
            <img src="images/carTypes/toyota-suv.png" />
            <p>
                <a href="#" class="btn btn-outline-dark btn-lg">BOOK SUVS NOW</a>
            </p>
        </div>
        <div class="carousel-item">
            <img src="images/carTypes/mustang.png" />
            <p>
                <a href="#" class="btn btn-outline-dark btn-lg">BOOK CONVERTIBLES NOW</a>
            </p>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
